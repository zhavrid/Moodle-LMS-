{{!
    @template file/version

    Meta-data version.php file.

    Context variables required for this template:
    * component
    * copyright
    * release
    * requires
    * maturity
    * has_dependencies
    * dependencies
    * dependencies.plugin
    * dependencies.version

    Example context (json):
    {
        "component": "local_test",
        "copyright": "2021 David Mudr√°k <david@moodle.com>",
        "release": "0.1.0",
        "version": "2021031301",
        "requires": "2020061500",
        "maturity": "MATURITY_STABLE",
        "has_dependencies": false
    }
}}
{{< common/boilerplate_php }}
{{$ description }}Plugin version and other meta-data are defined here.{{/ description }}
{{$ package }}{{ component }}{{/ package }}
{{$ copyright }}{{{ copyright }}}{{/ copyright }}
{{/ common/boilerplate_php }}

$plugin->component = '{{ component }}';
{{# release }}
$plugin->release = '{{ . }}';
{{/ release }}
$plugin->version = {{ version }};
{{# requires }}
$plugin->requires = {{ . }};
{{/ requires }}
{{# maturity }}
$plugin->maturity = {{ . }};
{{/ maturity }}
{{# has_dependencies }}
$plugin->dependencies = [
{{# dependencies }}
    '{{ .plugin }}' => {{ .version }},
{{/ dependencies }}
];
{{/ has_dependencies }}
