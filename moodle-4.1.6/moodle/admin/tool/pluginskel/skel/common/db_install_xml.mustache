{{!
    @template common/db_install_xml

    Common parts of the XMLDB install.xml file.

    Context variables required for this template:
    * component
    * xmldb_path
    * xmldb_version

    Example context (json):
    {
        "component": "local_test",
        "xmldb_path": "local/test/db",
        "xmldb_version": "20210313"
    }
}}
<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="{{ xmldb_path }}" VERSION="{{ xmldb_version }}" COMMENT="XMLDB file for Moodle {{ component }}"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
{{$ tables }}{{/ tables }}
  </TABLES>
</XMLDB>
